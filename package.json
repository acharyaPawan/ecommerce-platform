{
  "name": "ecommerce-platform",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:services": "turbo run dev:services --parallel",
    "dev:workers": "turbo run worker:outbox --parallel --filter=@ecommerce/iam-svc --filter=@ecommerce/catalog-svc --filter=@ecommerce/inventory-svc --filter=@ecommerce/orders-svc --filter=@ecommerce/payments-svc",
    "dev:orders-workers": "turbo run worker:inventory --parallel --filter=@ecommerce/orders-svc",
    "dev:inventory-workers": "turbo run worker:orders worker:reservations --parallel --filter=@ecommerce/inventory-svc",
    "build": "turbo run build",
    "build:services": "turbo run build:services",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.18",
    "@testcontainers/postgresql": "^11.10.0",
    "@testcontainers/rabbitmq": "^11.10.0",
    "@types/node": "^20.19.24",
    "@vitest/ui": "^4.0.16",
    "json-schema-to-ts": "^3.1.1",
    "tailwindcss": "4.1.18",
    "tsx": "^4.21.0",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "shadcn": "^3.6.3",
    "tw-animate-css": "^1.4.0"
  }
}
