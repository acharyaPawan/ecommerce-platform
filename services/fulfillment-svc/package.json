{
  "name": "@ecommerce/fulfillment-svc",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node --import ./dist/instrumentation.js dist/index.js",
    "dev": "tsx watch --import=./dist/instrumentation.js src/index.ts",
    "build:services": "pnpm run build",
    "dev:services": "pnpm run dev",
    "db:push": "pnpm exec drizzle-kit push",
    "test": "vitest"
  },
  "dependencies": {
    "@ecommerce/core": "workspace:*",
    "@hono/node-server": "^1.19.6",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.211.0",
    "@opentelemetry/sdk-logs": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "drizzle-orm": "^0.44.7",
    "dotenv": "^17.2.3",
    "hono": "^4.10.4",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/pg": "^8.15.9",
    "@types/node": "^20.19.24",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
